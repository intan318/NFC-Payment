<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.profile.ProfileActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:elevation="2dp"
                android:background="#A7FFEB"
                android:layout_alignParentTop="true"
                android:id="@+id/rel_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_toEndOf="@id/btn_back"
                    android:textColor="#000"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:text="Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageButton
                    android:focusable="true"
                    android:background="@drawable/ic_logout"
                    android:layout_margin="20dp"
                    android:id="@+id/btn_logout"
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                    android:focusable="true"
                    android:background="@drawable/ic_action_back"
                    android:layout_margin="20dp"
                    android:id="@+id/btn_back"
                    android:layout_alignParentStart="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textSize="15sp"
                    android:text="Nama barang"
                    android:id="@+id/txt_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:text="Email"
                        android:id="@+id/txt_email"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="15sp"
                        android:text="Saldo  Rp."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_saldo"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:text="tanggal"
                    android:id="@+id/txt_daftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.cardview.widget.CardView
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_margin="16dp"
                    android:textSize="16sp"
                    android:text="Riwayat Transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="16dp"
                android:id="@+id/rcy_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_empty"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_transaction_empty"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Belum ada Transaksi yang dilakukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>