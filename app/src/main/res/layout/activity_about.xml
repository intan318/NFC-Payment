<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ta.putri.nfc.AboutActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_marginTop="20dp"
                android:layout_gravity="start"
                android:background="@drawable/ic_action_back"
                android:layout_margin="20dp"
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Aplikasi "
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Tugas Akhir"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        <androidx.appcompat.widget.AppCompatImageView
                android:layout_margin="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_pnj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Agta Marlina Putri 1316030001"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Tantowi Nugroho 1316030092"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Teknik Telekomunikasi 2016"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Jurusan Teknik Elektro"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>
